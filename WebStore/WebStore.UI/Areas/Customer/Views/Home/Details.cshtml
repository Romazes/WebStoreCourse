@model ShoppingCart
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Item Details</h2>
<br />

<form method="post">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MenuItem.Name" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="MenuItem.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MenuItem.Description" readonly class="col-form-label"></label>
                </div>
                <div class="col-10">
                    @Html.Raw(Model.MenuItem.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MenuItem.Price" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="MenuItem.Price" readonly class="form-control" />
                </div>s
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MenuItem.KindOfFlavour" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <select asp-for="MenuItem.KindOfFlavour" disabled id="CategoryId"
                            asp-items="Html.GetEnumSelectList<MenuItem.EKindOfFlavour>()"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Count" class="col-form-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Count" class="form-control" />
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-5">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
                <div class="col-5">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
        <!--Image-->
        <div class="col-4 offset-lg-0">
            <img src="@Model.MenuItem.PictureUri" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>

    </div>
    <input asp-for="MenuItemId" hidden />
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}