@model IEnumerable<OrderDetailsViewModel>
@{
    ViewData["Title"] = "OrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(n => n.OrderHeader.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.OrderHeader.PickupName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.OrderHeader.ApplicationUser.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.OrderHeader.PickUpTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(n => n.OrderHeader.OrderTotal)
                    </th>
                    <th>
                        Total Items
                    </th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(n => item.OrderHeader.Id)
                </td>
                <td>
                    @Html.DisplayFor(n => item.OrderHeader.PickupName)
                </td>
                <td>
                    @Html.DisplayFor(n => item.OrderHeader.ApplicationUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(n => item.OrderHeader.PickUpTime)
                </td>
                <td>
                    @Html.DisplayFor(n => item.OrderHeader.OrderTotal)
                </td>
                <td>
                    @Html.DisplayFor(n => item.OrderDetails.Count)
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No category exists... <i class="far fa-frown-open"></i></p>
        }
    </div>
</div>